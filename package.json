{
  "name": "mouse-gesture-speed",
  "version": "0.2.1",
  "private": true,
  "description": "Chrome mouse gesture extension with configurable actions.",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run sync:assets",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "sync:assets": "node scripts/postbuild.mjs",
    "package": "npm run build && node scripts/package-zip.mjs",
    "generate:icons": "node scripts/generate-icons.mjs"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.269",
    "archiver": "^6.0.2",
    "sharp": "^0.33.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  }
}
